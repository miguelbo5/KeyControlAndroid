<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imagen_favoritos"
        android:layout_width="165dp"
        android:layout_height="167dp"
        android:layout_marginRight="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombre_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imagen_favoritos"
        style="@style/Textos"
        android:text="Nombre" />

    <TextView
        android:id="@+id/precio_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_favoritos"
        android:layout_marginTop="20dp"
        style="@style/Textos"
        android:layout_toRightOf="@id/imagen_favoritos"
        android:text="Precio" />



    <Button
        android:id="@+id/addToCart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/Botones"
        android:layout_below="@+id/precio_favoritos"
        android:layout_toRightOf="@+id/imagen_favoritos"
        android:text="Button" />

    <ImageButton
        android:id="@+id/boton_quitar_favoritos"
        style="@style/Botones"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/nombre_favoritos"
        app:srcCompat="@drawable/baseline_close_black_18dp" />

</RelativeLayout>