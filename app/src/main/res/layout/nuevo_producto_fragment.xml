<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_nombre_teclado"
        style="@style/Textos"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:hint="Dime el nombre del teclado"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_precio_teclado"
        style="@style/Textos"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Dime el precio del teclado"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_color_teclado"
        style="@style/Textos"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Dime el color del teclado"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_descripcion_teclado"
        style="@style/Textos"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Dime la descripciÃ³n del teclado"
        android:inputType="text" />

    <Button
        android:id="@+id/boton_crear"
        style="@style/Botones"
        android:layout_width="188dp"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="Crear producto" />

    <Button
        android:id="@+id/boton_atras"
        style="@style/Botones"
        android:layout_width="188dp"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:text="Atras" />

</LinearLayout>