<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_producto"
        android:layout_width="171dp"
        android:layout_height="127dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:src="@drawable/teclado2" />

    <TextView
        android:id="@+id/texto_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/img_producto"
        android:gravity="center"
        android:maxLines="1"
        android:text="Nombre teclado"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/texto_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto_nombre"
        android:layout_toRightOf="@+id/img_producto"
        android:gravity="center"
        android:maxLines="1"
        android:text="Precio"
        android:textColor="#FF5722"
        android:textSize="20sp" />

</RelativeLayout>
